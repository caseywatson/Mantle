@model Mantle.PhotoGallery.Web.Models.PhotoUploadViewModel

<h2>Upload a photo</h2>
<hr/>

@using (Html.BeginForm("Upload", "Photos", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
        <p class="field-validation-error text-danger">@Html.ValidationMessageFor(m => m.Title)</p>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new {@class = "form-control", rows = 3})
        <p class="field-validation-error text-danger">@Html.ValidationMessageFor(m => m.Description)</p>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Photo)
        @Html.TextBoxFor(m => m.Photo, new {type = "file"})
        <p class="help-block">
            Photo must be 5 mb or less in size.<br/>
            Photo type must be bmp, gif, jpeg or png.
        </p>
        <p class="field-validation-error text-danger">@Html.ValidationMessageFor(m => m.Photo)</p>
    </div>
    <hr/>
    <button type="submit" class="btn btn-primary">Upload photo</button>
}